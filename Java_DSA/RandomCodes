	fIND SUPERHILL

int[] arr={2,1,3,5,6,8,7,4};
int n=arr.length;
if(n==1) return 0;
if(arr[0]>arr[1]){
   return 0;
   }
if(arr[n-1]>arr[n-1]){
   return n-1;
   }
for(int i=0;i<n;i++){
   if(arr[i]>arr[i+1] && arr[i]>arr[i-1]){
      return i;
      }
    }
      return -1;
  }
  
  
